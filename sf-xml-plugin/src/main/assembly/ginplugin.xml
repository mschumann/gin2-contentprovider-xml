<?xml version="1.0" encoding="UTF-8"?>

<ginplugin xsi:schemaLocation="http://www.iqser.com/schema/ginplugin/2.0 http://www.iqser.com/schema/ginplugin/2.0/ginplugin.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.iqser.com/schema/ginplugin/2.0"
>

	<!-- xsi:schemaLocation="http://www.iqser.com/schema/ginplugin/2.0 http://www.iqser.com/schema/ginplugin/2.0/ginplugin.xsd" -->

	<name>iQser XML-Content-Provider</name>
	<vendor>iQser GmbH</vendor>
	<version>###PROJECT_VERSION###</version>

	<description>
		iQser XML-Content-Provider
	</description>

	<classname type="ContentProvider">
		<!-- full qualified class name -->
		net.sf.iqser.plugin.xml.XMLContentProvider
	</classname>

	<params>
		<param name="xml-file-path" type="String" optional="false">The file path of the xml data source.</param>
		<param name="url-tag-name" type="String" optional="false">The xml tag name for the content url.</param>
		<param name="date-tag-name" type="String" optional="true">The xml node tag name for the content's modification date.</param>
		<param name="key-attribute-names" type="String" optional="true">Definition of tag names for key attributes.</param>
		<param name="date-attribute-names" type="String" optional="true">The node tag names for date attributes.</param>
		<param name="number-attribute-names" type="String" optional="true">The  node tag names for number attributes.</param>
		<param name="date-format" type="String" optional="true">The date format for a simple date formatte described as a string pattern.</param>
		<param name="text-tag-name" type="String" optional="true">The tag name for a fulltext part of the content item.</param>
		<param name="content-type" type="String" optional="false">The content type of the content objects of the xml file.</param>
	</params>
</ginplugin>